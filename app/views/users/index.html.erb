<p id="notice"><%= notice %></p>
           <div class="pull-right login-links">
            <% if user_signed_in? %>
                <%= link_to current_user.email, edit_user_registration_path, :title => "Edit Profile" %>
                <%= link_to "Log off", destroy_user_session_path, :method => :delete, :class => "label label-important" %>
            <% else %>
                <%= link_to "Log in", new_user_session_path, :method => :get %> |
                <%= link_to "Register", new_user_registration_path, :method => :get %>
            <% end %>

<h1>Listing Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>About</th>
      <th>Age</th>
      <th>Sex</th>
      <th>Progress</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.avatar(:thumb)%></td>
        <td><%= user.name %></td>
        <td><%= user.about %></td>
        <td><%= user.age %></td>
        <td><%= user.sex %></td>
        <td><%= user.progress %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
